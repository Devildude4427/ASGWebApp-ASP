@{
    ViewData["Title"] = "ASG - Update Contact Details";
}

@section Style
{
    <link href="~/vendors/jquery-steps/jquery.steps.css" rel="stylesheet">
    <link href="~/vendors/jquery-steps/steps.css" rel="stylesheet">
    <style type="text/css">.required { }</style>
}

@section Header {
    @await Html.PartialAsync("_Header")
}

@section Sidebar {
    @await Html.PartialAsync("_Sidebar")
}

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex align-items-center">
                <h4 class="page-title">Update Contact Details</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body wizard-content">
                <form id="updateContactDetailsForm" class="m-t-40" style="margin-top: 0;">
                    <div>
                        <h3>Contact Information</h3>
                        <section>
                            <div class="form-group">
                                <label for="addressLine1">Address Line 1</label>
                                @* Each input has a 'name' field only to make jquery validate work correctly *@
                                <input type="text" id="addressLine1" name="addressLine1" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="addressLine2">Address Line 2</label>
                                <input type="text" id="addressLine2" name="addressLine2" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="city">City</label>
                                <input type="text" id="city" name="city" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="postCode">Post Code</label>
                                <input type="text" id="postCode" name="postCode" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="phoneNumber">Phone Number</label>
                                <input type="text" id="phoneNumber" name="phoneNumber" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="companyName">Company Name</label>
                                <input type="text" id="companyName" name="companyName" class="form-control">
                            </div>
                        </section>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_Footer")
</div>


@section Scripts
{
    <script src="~/vendors/jquery-steps/build/jquery.steps.min.js"></script>
    <script src="~/vendors/jquery-validation/dist/jquery.validate.min.js"></script> 
    <script src="~/js/UpdateContactDetails/UpdateContactDetails.js"></script>
}